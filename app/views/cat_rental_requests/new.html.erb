<h1> Create a new request form.</h1>
<form action="<%=cat_rental_requests_url%>" method="POST">
  <input type="hidden"
       name="authenticity_token"
       value="<%= form_authenticity_token %>">
  <label for="select_cat_id">Choose your cat</label>
  <select name="cat_rental_request[cat_id]" id="select_cat_id">
    <% Cat.all.each do |cat| %>
      <option value="<%=cat.id%>"><%=cat.name%></option>
    <% end %>
  </select>

  <label for="start_date">Enter your start_date</label>
  <input type="date" name="cat_rental_request[start_date]" id="start_date">

  <label for="end_date">Enter your end day</label>
  <input type="date" name="cat_rental_request[end_date]" id="end_date">

  <button>Make request!</button>
</form>
